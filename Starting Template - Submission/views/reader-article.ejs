<!DOCTYPE html>
<html>
<head>
    <title><%= article.title %></title>
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="navbar">
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/reader">Reader</a>
            <a href="/author">Author</a>

        </div>
    </div>

    <div class="container">
        <h1 class="page-title"><%= article.title %></h1>
        <p class="article-meta">Published on: <%= article.published_at %></p>
        <div class="article-content">
            <%= article.content %>
        </div>

        <div class="like-comment-section">
            <form action="/reader/article/<%= article.post_id %>/like" method="post" class="like-form">
                <button type="submit" class="like-button">Like</button>
                <span><%= article.like_count %> Likes</span>
            </form>
            <form action="/reader/article/<%= article.post_id %>/comment" method="post" class="comment-form">
                <input type="text" name="commenterName" placeholder="Your Name" required>
                <textarea name="commentText" placeholder="Your Comment" required></textarea>
                <button type="submit" class="submit-button">Submit Comment</button>
            </form>
        </div>

        <div class="comments-container">
            <% comments.forEach(comment => { %>
                <div class="comment">
                    <p class="commenter-name"><%= comment.commenter_name %>:</p>
                    <p class="comment-text"><%= comment.comment_text %></p>
                    <p class="comment-date">Commented on: <%= comment.created_at %></p>
                </div>
            <% }); %>
        </div>

        <button onclick="window.location='/reader';" class="back-button">Back to Reader Home Page</button>
    </div>
</body>
</html>